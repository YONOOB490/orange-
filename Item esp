-- [[ 2. ITEM ESP v3.0 - SMART CACHE EDITION ]] --

local Workspace = game:GetService("Workspace")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer
local ESP_ITEM_ENABLED = true
local MAX_ITEMS = 30
local KEYWORDS = {"item", "coin", "weapon", "chest", "tool", "money", "box", "diamond", "gem"}
local CACHED_ESP = {} -- เก็บข้อมูลเพื่อลดการสร้าง Object ซ้ำ

-- [SECTION: UI CONSTRUCTION - MATCHING STYLE]
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ItemESP_Module"
ScreenGui.Parent = CoreGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 180, 0, 140)
MainFrame.Position = UDim2.new(0.05, 0, 0.4, 130) -- วางต่อจากอันแรกด้านล่าง
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.ClipsDescendants = true
MainFrame.Parent = ScreenGui

Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 6)
local UIStroke = Instance.new("UIStroke")
UIStroke.Color = Color3.fromRGB(45, 45, 45)
UIStroke.Thickness = 1.5
UIStroke.Parent = MainFrame

-- TopBar
local TopBar = Instance.new("Frame")
TopBar.Size = UDim2.new(1, 0, 0, 28)
TopBar.BackgroundColor3 = Color3.fromRGB(35, 35, 45) -- สีโทนน้ำเงินนิดๆ ให้ต่างจาก Player ESP
TopBar.Parent = MainFrame

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -50, 1, 0)
Title.Position = UDim2.new(0, 8, 0, 0)
Title.Text = "ITEM ESP v3.0"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Parent = TopBar

-- Dragging Logic (Same as ESP)
local dragStart, startPos
TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragStart = input.Position; startPos = MainFrame.Position
        input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragStart = nil end end)
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragStart then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Buttons Setup
local function createTitleBtn(txt, pos, color, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 20, 0, 20)
    btn.Position = pos
    btn.Text = txt
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Parent = TopBar
    Instance.new("UICorner", btn)
    btn.MouseButton1Click:Connect(callback)
end

local isMinimized = false
createTitleBtn("×", UDim2.new(1, -24, 0, 4), Color3.fromRGB(150, 50, 50), function() ScreenGui:Destroy() ESP_ITEM_ENABLED = false end)
createTitleBtn("-", UDim2.new(1, -48, 0, 4), Color3.fromRGB(60, 60, 60), function()
    isMinimized = not isMinimized
    MainFrame:TweenSize(isMinimized and UDim2.new(0, 180, 0, 28) or UDim2.new(0, 180, 0, 140), "Out", "Quart", 0.3, true)
end)

-- [SECTION: ITEM ESP LOGIC]
local function CreateItemVisual(obj)
    if CACHED_ESP[obj] then return end
    
    local highlight = Instance.new("Highlight")
    highlight.FillColor = Color3.fromRGB(255, 255, 0)
    highlight.OutlineColor = Color3.new(1, 1, 1)
    highlight.FillTransparency = 0.5
    highlight.Parent = obj
    
    local bill = Instance.new("BillboardGui")
    bill.Size = UDim2.new(0, 100, 0, 30)
    bill.AlwaysOnTop = true
    bill.Adornee = obj
    bill.Parent = obj
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextStrokeTransparency = 0
    label.Font = Enum.Font.GothamBold
    label.TextSize = 10
    label.Parent = bill
    
    CACHED_ESP[obj] = {Highlight = highlight, Label = label, Gui = bill}
end

local function CleanCache()
    for obj, data in pairs(CACHED_ESP) do
        if not obj or not obj.Parent then
            if data.Highlight then data.Highlight:Destroy() end
            if data.Gui then data.Gui:Destroy() end
            CACHED_ESP[obj] = nil
        end
    end
end

-- [SECTION: CONTROLS]
local Content = Instance.new("Frame")
Content.Size = UDim2.new(1, 0, 1, -28)
Content.Position = UDim2.new(0, 0, 0, 28)
Content.BackgroundTransparency = 1
Content.Parent = MainFrame

local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Size = UDim2.new(0, 160, 0, 35)
ToggleBtn.Position = UDim2.new(0, 10, 0, 10)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
ToggleBtn.Text = "ITEM ESP: ON"
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextColor3 = Color3.new(1,1,1)
ToggleBtn.Parent = Content
Instance.new("UICorner", ToggleBtn)

local StatusLabel = Instance.new("TextLabel")
StatusLabel.Size = UDim2.new(1, 0, 0, 50)
StatusLabel.Position = UDim2.new(0, 0, 0, 50)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "Scanning...\nItems Found: 0/30"
StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
StatusLabel.Font = Enum.Font.Gotham
StatusLabel.TextSize = 10
StatusLabel.Parent = Content

-- Toggle Event
ToggleBtn.MouseButton1Click:Connect(function()
    ESP_ITEM_ENABLED = not ESP_ITEM_ENABLED
    ToggleBtn.Text = "ITEM ESP: " .. (ESP_ITEM_ENABLED and "ON" or "OFF")
    ToggleBtn.BackgroundColor3 = ESP_ITEM_ENABLED and Color3.fromRGB(255, 170, 0) or Color3.fromRGB(100, 100, 100)
    if not ESP_ITEM_ENABLED then
        for _, v in pairs(CACHED_ESP) do
            v.Highlight.Enabled = false
            v.Gui.Enabled = false
        end
    else
        for _, v in pairs(CACHED_ESP) do
            v.Highlight.Enabled = true
            v.Gui.Enabled = true
        end
    end
end)

-- Main Loop (Scan every 2s)
task.spawn(function()
    while task.wait(2) do
        if not ESP_ITEM_ENABLED then continue end
        
        CleanCache()
        local count = 0
        for _, obj in pairs(Workspace:GetDescendants()) do
            if count >= MAX_ITEMS then break end
            if obj:IsA("BasePart") or obj:IsA("Model") then
                local name = obj.Name:lower()
                for _, key in pairs(KEYWORDS) do
                    if name:find(key) then
                        CreateItemVisual(obj)
                        count = count + 1
                        break
                    end
                end
            end
        end
        StatusLabel.Text = "Scanning Complete\nItems Found: " .. count .. "/" .. MAX_ITEMS
    end
end)

-- Distance Update Loop (High Priority)
RunService.RenderStepped:Connect(function()
    if not ESP_ITEM_ENABLED then return end
    local char = LocalPlayer.Character
    if not char or not char:FindFirstChild("HumanoidRootPart") then return end
    
    for obj, data in pairs(CACHED_ESP) do
        if obj:IsA("BasePart") or obj:IsA("Model") then
            local pos = obj:IsA("Model") and obj:GetPivot().Position or obj.Position
            local dist = math.floor((char.HumanoidRootPart.Position - pos).Magnitude)
            data.Label.Text = obj.Name .. "\n[" .. dist .. "m]"
        end
    end
end)

