ApplyStroke.Color = Core.Colors.AccentColor
ApplyStroke.Thickness = 1
ApplyStroke.Transparency = 0.7
ApplyStroke.Parent = ApplyButton

-- Apply Logic
local function ApplyMovementMods()
    local humanoid = Core.GetHumanoid() -- ‡πÉ‡∏ä‡πâ utility ‡∏à‡∏≤‡∏Å Core
    
    if humanoid then
        -- ‡πÉ‡∏ä‡πâ pcall ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô error
        pcall(function()
            humanoid.WalkSpeed = Core.Config.WalkSpeed
            humanoid.JumpPower = Core.Config.JumpPower
        end)
        
        Core.ShowNotification("‚úÖ Movement mods applied", 2)
    else
        Core.ShowNotification("‚ùå Humanoid not found", 2)
    end
end

ApplyButton.MouseButton1Click:Connect(ApplyMovementMods)

-- Validation for inputs
WSInput.FocusLost:Connect(function()
    local val = tonumber(WSInput.Text)
    if val and val >= 0 and val <= 500 then -- ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ä‡πà‡∏ß‡∏á‡∏Ñ‡πà‡∏≤
        Core.Config.WalkSpeed = val
        WSInput.Text = tostring(val)
        Core.SaveConfig()
        Core.ShowNotification("‚úÖ WalkSpeed set to " .. val, 2)
    else
        WSInput.Text = tostring(Core.Config.WalkSpeed) -- ‡∏Å‡∏•‡∏±‡∏ö‡∏Ñ‡πà‡∏≤‡πÄ‡∏î‡∏¥‡∏°
        Core.ShowNotification("‚ùå Invalid value (0-500)", 2)
    end
end)

JPInput.FocusLost:Connect(function()
    local val = tonumber(JPInput.Text)
    if val and val >= 0 and val <= 500 then
        Core.Config.JumpPower = val
        JPInput.Text = tostring(val)
        Core.SaveConfig()
        Core.ShowNotification("‚úÖ JumpPower set to " .. val, 2)
    else
        JPInput.Text = tostring(Core.Config.JumpPower)
        Core.ShowNotification("‚ùå Invalid value (0-500)", 2)
    end
end)

-- Add hover effect
Core.AddHoverEffect(ApplyButton)

