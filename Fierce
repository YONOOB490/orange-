-- ========== Sidebar (‡πÅ‡∏ñ‡∏ö‡∏î‡πâ‡∏≤‡∏ô‡∏ã‡πâ‡∏≤‡∏¢) ==========
local Sidebar = Instance.new("Frame")
Sidebar.Name = "Sidebar"
Sidebar.Size = UDim2.new(0, 85, 1, -60) -- ‡∏Å‡∏ß‡πâ‡∏≤‡∏á 85px, ‡∏™‡∏π‡∏á‡πÄ‡∏ï‡πá‡∏°‡∏•‡∏ö header
Sidebar.Position = UDim2.new(0, 0, 0, 60) -- ‡∏à‡∏≤‡∏Å‡∏ö‡∏ô 60px (‡∏Ç‡πâ‡∏≤‡∏á‡∏•‡πà‡∏≤‡∏á header)
Sidebar.BackgroundTransparency = 0.3
Sidebar.BorderSizePixel = 0
Sidebar.Parent = MainFrame

-- Gradient ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö sidebar
local SidebarGradient = Instance.new("UIGradient")
SidebarGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, DarkColor),
    ColorSequenceKeypoint.new(1, DarkBase)
})
SidebarGradient.Rotation = 90 -- ‡πÅ‡∏ô‡∏ß‡∏ï‡∏±‡πâ‡∏á
SidebarGradient.Parent = Sidebar

-- ========== Content Area (‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤) ==========
local Content = Instance.new("Frame")
Content.Name = "Content"
Content.Size = UDim2.new(1, -85, 1, -60) -- ‡πÄ‡∏ï‡πá‡∏°‡∏à‡∏≠‡∏•‡∏ö sidebar ‡πÅ‡∏•‡∏∞ header
Content.Position = UDim2.new(0, 85, 0, 60) -- ‡∏à‡∏≤‡∏Å‡∏ã‡πâ‡∏≤‡∏¢ 85px, ‡∏à‡∏≤‡∏Å‡∏ö‡∏ô 60px
Content.BackgroundTransparency = 1 -- ‡πÇ‡∏õ‡∏£‡πà‡∏á‡πÉ‡∏™
Content.ClipsDescendants = true -- ‡∏ï‡∏±‡∏î‡∏™‡πà‡∏ß‡∏ô‡πÄ‡∏Å‡∏¥‡∏ô
Content.Parent = MainFrame

-- ========== ‡∏£‡∏∞‡∏ö‡∏ö Tab (‡∏ß‡πà‡∏≤‡∏á‡πÄ‡∏õ‡∏•‡πà‡∏≤‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏£‡∏±‡∏ö Part 2 ‡πÅ‡∏•‡∏∞ 3) ==========
local TabContents = {} -- ‡πÄ‡∏Å‡πá‡∏ö Frame ‡∏Ç‡∏≠‡∏á‡πÅ‡∏ï‡πà‡∏•‡∏∞ tab
local CurrentTab = 1 -- Tab ‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô (‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏µ‡πà 1)

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Frame ‡∏ß‡πà‡∏≤‡∏á‡πÄ‡∏õ‡∏•‡πà‡∏≤‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÅ‡∏ï‡πà‡∏•‡∏∞ tab (Part 2 ‡πÅ‡∏•‡∏∞ 3 ‡∏à‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤)
for i = 1, 2 do -- ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏î‡πâ‡∏ß‡∏¢ 2 tabs (‡∏à‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÉ‡∏ô Part 3)
    local TabContent = Instance.new("Frame")
    TabContent.Name = "Tab" .. i .. "Content"
    TabContent.Size = UDim2.new(1, 0, 1, 0) -- ‡πÄ‡∏ï‡πá‡∏°‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà content
    TabContent.Position = UDim2.new(0, 0, 0, 0)
    TabContent.BackgroundTransparency = 1 -- ‡πÇ‡∏õ‡∏£‡πà‡∏á‡πÉ‡∏™
    TabContent.Visible = (i == 1) -- ‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏â‡∏û‡∏≤‡∏∞ tab ‡πÅ‡∏£‡∏Å
    TabContent.Parent = Content
    TabContents[i] = TabContent -- ‡πÄ‡∏Å‡πá‡∏ö‡πÑ‡∏ß‡πâ‡πÉ‡∏ô array
end

-- ========== ‡∏õ‡∏∏‡πà‡∏° Tab ‡∏î‡πâ‡∏≤‡∏ô‡∏ã‡πâ‡∏≤‡∏¢ ==========
local TabButtons = {} -- ‡πÄ‡∏Å‡πá‡∏ö‡∏õ‡∏∏‡πà‡∏° tab

for i, icon in ipairs(TabIcons) do -- Loop ‡∏ú‡πà‡∏≤‡∏ô TabIcons (‡∏°‡∏µ 2 ‡∏ï‡∏±‡∏ß‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô)
    local TabButton = Instance.new("TextButton")
    TabButton.Name = "TabButton" .. i
    TabButton.Size = UDim2.new(1, 0, 0, 55) -- ‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡πÄ‡∏ï‡πá‡∏° sidebar, ‡∏™‡∏π‡∏á 55px
    TabButton.Position = UDim2.new(0, 0, 0, (i-1)*65 + 20) -- ‡∏´‡πà‡∏≤‡∏á‡∏Å‡∏±‡∏ô 65px, ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏à‡∏≤‡∏Å 20px
    TabButton.BackgroundTransparency = 1 -- ‡πÇ‡∏õ‡∏£‡πà‡∏á‡πÉ‡∏™
    TabButton.Text = icon -- ‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏à‡∏≤‡∏Å TabIcons
    TabButton.TextScaled = false
    TabButton.TextSize = 36 -- ‡∏Ç‡∏ô‡∏≤‡∏î‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô
    TabButton.TextColor3 = Color3.new(1,1,1) -- ‡∏™‡∏µ‡∏Ç‡∏≤‡∏ß
    TabButton.Font = Enum.Font.GothamBlack
    TabButton.Parent = Sidebar
    
    -- Glow effect ‡πÄ‡∏°‡∏∑‡πà‡∏≠ hover
    local TabGlow = Instance.new("UIStroke")
    TabGlow.Name = "TabGlow"
    TabGlow.Transparency = 0.9 -- ‡∏à‡∏≤‡∏á‡πÜ
    TabGlow.Color = AccentColor
    TabGlow.Thickness = 2
    TabGlow.Parent = TabButton
    
    TabButtons[i] = TabButton -- ‡πÄ‡∏Å‡πá‡∏ö‡πÑ‡∏ß‡πâ‡πÉ‡∏ô array
    
    -- ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏•‡πÑ‡∏õ‡∏¢‡∏±‡∏á Part 2 ‡πÅ‡∏•‡∏∞ 3
    -- ‡∏õ‡∏∏‡πà‡∏° tab ‡∏à‡∏∞‡∏ñ‡∏π‡∏Å‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏° event ‡πÉ‡∏ô Part 3 ‡πÄ‡∏û‡∏£‡∏≤‡∏∞‡∏ï‡πâ‡∏≠‡∏á‡∏£‡∏≠ ESP system ‡πÇ‡∏´‡∏•‡∏î‡∏Å‡πà‡∏≠‡∏ô
end

-- ========== Minimized Icon (‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏ï‡∏≠‡∏ô‡∏¢‡πà‡∏≠) ==========
local MinimizedIcon = Instance.new("TextButton")
MinimizedIcon.Name = "MinimizedIcon"
MinimizedIcon.Size = UDim2.new(0, 50, 0, 50) -- ‡∏Ç‡∏ô‡∏≤‡∏î 50x50px
MinimizedIcon.Position = UDim2.new(1, -60, 0, 10) -- ‡∏ö‡∏ô‡∏Ç‡∏ß‡∏≤‡∏Ç‡∏≠‡∏á‡∏à‡∏≠
MinimizedIcon.BackgroundColor3 = DarkColor
MinimizedIcon.BackgroundTransparency = 0.5
MinimizedIcon.Text = LogoEmoji -- ‡πÉ‡∏ä‡πâ‡πÇ‡∏•‡πÇ‡∏Å‡πâ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ô
MinimizedIcon.TextScaled = true
MinimizedIcon.TextColor3 = AccentColor
MinimizedIcon.Font = Enum.Font.GothamBlack
MinimizedIcon.Visible = false -- ‡∏ã‡πà‡∏≠‡∏ô‡πÑ‡∏ß‡πâ‡∏Å‡πà‡∏≠‡∏ô
MinimizedIcon.Parent = ScreenGui

local MinIconCorner = Instance.new("UICorner")
MinIconCorner.CornerRadius = UDim.new(0, 10)
MinIconCorner.Parent = MinimizedIcon

-- ========== State Management (‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞) ==========
local GUIState = {
    isMinimized = false,
    isLarge = false,
    dragging = false,
    dragInput = nil,
    dragStart = nil,
    startPos = nil
}

-- ========== Dragging System (‡∏•‡∏≤‡∏Å‡∏ß‡∏≤‡∏á GUI) ==========
-- ‡πÉ‡∏ä‡πâ InputBegan/Changed/Ended ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô memory leak
Header.InputBegan:Connect(function(input)
    -- ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏•‡∏≤‡∏Å‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î Mouse ‡∏´‡∏£‡∏∑‡∏≠ Touch
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        GUIState.dragging = true
        GUIState.dragStart = input.Position -- ‡∏à‡∏∏‡∏î‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
        GUIState.startPos = MainFrame.Position -- Position ‡∏Å‡πà‡∏≠‡∏ô‡∏•‡∏≤‡∏Å
    end
end)

Header.InputChanged:Connect(function(input)
    -- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Ç‡∏¢‡∏±‡∏ö Mouse ‡∏´‡∏£‡∏∑‡∏≠ Touch
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        GUIState.dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    -- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó Position ‡∏Ç‡∏≠‡∏á MainFrame ‡∏ï‡∏≤‡∏°‡∏Å‡∏≤‡∏£‡∏•‡∏≤‡∏Å
    if GUIState.dragging and input == GUIState.dragInput then
        local delta = input.Position - GUIState.dragStart -- ‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á‡∏à‡∏≤‡∏Å‡∏à‡∏∏‡∏î‡πÄ‡∏£‡∏¥‡πà‡∏°
        MainFrame.Position = UDim2.new(
            GUIState.startPos.X.Scale, 
            GUIState.startPos.X.Offset + delta.X, 
            GUIState.startPos.Y.Scale, 
            GUIState.startPos.Y.Offset + delta.Y
        )
    end
end)

Header.InputEnded:Connect(function(input)
    -- ‡∏´‡∏¢‡∏∏‡∏î‡∏•‡∏≤‡∏Å‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏õ‡∏•‡πà‡∏≠‡∏¢ Mouse ‡∏´‡∏£‡∏∑‡∏≠ Touch
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        GUIState.dragging = false
    end
end)

-- ========== Hover Effects (‡πÄ‡∏≠‡∏ü‡πÄ‡∏ü‡∏Ñ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ä‡∏µ‡πâ) ==========
local function AddHoverEffect(button)
    -- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏≠‡∏≤‡πÄ‡∏°‡∏≤‡∏™‡πå‡πÄ‡∏Ç‡πâ‡∏≤
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfoSmooth, {
            BackgroundTransparency = 0.4, -- ‡∏ä‡∏±‡∏î‡∏Ç‡∏∂‡πâ‡∏ô
            TextColor3 = AccentColor -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏™‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°
        }):Play()
    end)
    
    -- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏≠‡∏≤‡πÄ‡∏°‡∏≤‡∏™‡πå‡∏≠‡∏≠‡∏Å
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfoSmooth, {
            BackgroundTransparency = 0.6, -- ‡∏à‡∏≤‡∏á‡∏•‡∏á
            TextColor3 = Color3.new(1,1,1) -- ‡∏Å‡∏•‡∏±‡∏ö‡πÄ‡∏õ‡πá‡∏ô‡∏Ç‡∏≤‡∏ß
        }):Play()
    end)
end

-- ‡πÄ‡∏û‡∏¥‡πà‡∏° hover effect ‡πÉ‡∏´‡πâ‡∏õ‡∏∏‡πà‡∏°‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°
AddHoverEffect(MaximizeButton)
AddHoverEffect(MinimizeButton)
AddHoverEffect(CloseButton)

-- ========== Size & Minimize Logic (‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°‡∏Ç‡∏ô‡∏≤‡∏î) ==========
MaximizeButton.MouseButton1Click:Connect(function()
    if GUIState.isMinimized then return end -- ‡∏ñ‡πâ‡∏≤‡∏¢‡πà‡∏≠‡∏≠‡∏¢‡∏π‡πà‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡∏Ç‡∏¢‡∏≤‡∏¢
    
    GUIState.isLarge = not GUIState.isLarge -- ‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
    
    local targetSize = GUIState.isLarge and LargeSize or NormalSize
    local targetPos = GUIState.isLarge and LargePos or NormalPos
    
    -- Animate ‡∏Ç‡∏ô‡∏≤‡∏î‡πÅ‡∏•‡∏∞‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏Å‡∏±‡∏ô (smooth)
    TweenService:Create(MainFrame, TweenInfoSmooth, {
        Size = targetSize,
        Position = targetPos
    }):Play()
end)

MinimizeButton.MouseButton1Click:Connect(function()
    if GUIState.isMinimized then return end
    
    GUIState.isMinimized = true
    
    -- Animation ‡∏´‡∏î‡πÄ‡∏•‡πá‡∏Å‡∏•‡∏á
    TweenService:Create(MainFrame, TweenInfoSmooth, {
        Size = UDim2.new(0, 0, 0, 0)
    }):Play()
    
    -- ‡∏´‡∏•‡∏±‡∏á animation ‡πÄ‡∏™‡∏£‡πá‡∏à ‡∏ã‡πà‡∏≠‡∏ô frame ‡πÅ‡∏•‡∏∞‡πÅ‡∏™‡∏î‡∏á‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô
    task.delay(0.35, function()
        MainFrame.Visible = false
        MinimizedIcon.Visible = true
        MinimizedIcon.Size = UDim2.new(0, 0, 0, 0) -- ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏à‡∏≤‡∏Å‡∏Ç‡∏ô‡∏≤‡∏î 0
        
        -- Animate ‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡πÇ‡∏ú‡∏•‡πà‡∏Ç‡∏∂‡πâ‡∏ô‡∏°‡∏≤ (bounce effect)
        TweenService:Create(MinimizedIcon, TweenInfoBounce, {
            Size = UDim2.new(0, 50, 0, 50)
        }):Play()
    end)
end)

MinimizedIcon.MouseButton1Click:Connect(function()
    if not GUIState.isMinimized then return end
    
    GUIState.isMinimized = false
    
    -- Animation ‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏´‡∏≤‡∏¢‡πÑ‡∏õ
    TweenService:Create(MinimizedIcon, TweenInfoSmooth, {
        Size = UDim2.new(0, 0, 0, 0)
    }):Play()
    
    task.delay(0.35, function()
        MinimizedIcon.Visible = false
        MainFrame.Visible = true
        
        local targetSize = GUIState.isLarge and LargeSize or NormalSize
        local targetPos = GUIState.isLarge and LargePos or NormalPos
        
        -- Animate ‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤
        TweenService:Create(MainFrame, TweenInfoBounce, {
            Size = targetSize,
            Position = targetPos
        }):Play()
    end)
end)

CloseButton.Mou
--==============
-- Fierce Executor v1.6 - Part 2/3: ESP Engine
-- ‡∏™‡πà‡∏ß‡∏ô‡∏ó‡∏µ‡πà 2: ‡∏£‡∏∞‡∏ö‡∏ö ESP ‡∏™‡∏°‡∏ö‡∏π‡∏£‡∏ì‡πå‡πÅ‡∏ö‡∏ö (Name Tags + Highlights)
-- ‡∏≠‡∏≠‡∏Å‡πÅ‡∏ö‡∏ö‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡πá‡∏ô standalone module ‡∏ó‡∏µ‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡πÅ‡∏¢‡∏Å‡πÑ‡∏î‡πâ
-- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô memory leak ‡πÅ‡∏•‡∏∞ optimize performance ‡∏™‡∏π‡∏á‡∏™‡∏∏‡∏î
--==============

-- ‡∏î‡∏∂‡∏á FierceCore ‡∏à‡∏≤‡∏Å Part 1
local Core = _G.FierceCore
if not Core then
    error("FierceExecutor Error: Part 1 must be loaded before Part 2!")
    return
end

-- ‡∏î‡∏∂‡∏á services ‡∏à‡∏≤‡∏Å Core
local Players = Core.Players
local Player = Core.Player
local TweenService = Core.TweenService
local RunService = Core.RunService

-- ========== ESP Controller (‡∏ï‡∏±‡∏ß‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏° ESP ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î) ==========
local ESPController = {
    -- State
    isEnabled = {
        Name = false,
        Highlight = false
    },
    
    -- ‡πÄ‡∏Å‡πá‡∏ö Objects ‡∏ó‡∏µ‡πà‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Ç‡∏∂‡πâ‡∏ô‡πÄ‡∏û‡∏∑‡πà‡∏≠ cleanup
    Objects = {
        NameTags = {}, -- ‡πÄ‡∏Å‡πá‡∏ö BillboardGui ‡∏Ç‡∏≠‡∏á‡πÅ‡∏ï‡πà‡∏•‡∏∞ player
        Highlights = {} -- ‡πÄ‡∏Å‡πá‡∏ö Highlight ‡∏Ç‡∏≠‡∏á‡πÅ‡∏ï‡πà‡∏•‡∏∞ player
    },
    
    -- Connections ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö cleanup
    Connections = {
        PlayerAdded = nil,
        PlayerRemoving = nil,
        RenderStepped = nil
    },
    
    -- Settings
    Settings = {
        Range = Core.Config.ESP.Range, -- ‡∏£‡∏∞‡∏¢‡∏∞‡∏°‡∏≠‡∏á‡πÄ‡∏´‡πá‡∏ô
        TextSize = Core.Config.ESP.TextSize, -- ‡∏Ç‡∏ô‡∏≤‡∏î‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°
        UpdateRate = 0.15 -- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏ó‡∏∏‡∏Å 0.15 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ (‡∏õ‡∏£‡∏∞‡∏°‡∏≤‡∏ì 6.67 FPS)
    }
}

-- ========== Name Tag ESP (‡∏ä‡∏∑‡πà‡∏≠‡πÅ‡∏•‡∏∞‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô) ==========
local function CreateNameTag(targetPlayer)
    -- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏ã‡πâ‡∏≥
    if ESPController.Objects.NameTags[targetPlayer] then
        return
    end
    
    -- ‡∏™‡∏£‡πâ‡∏≤‡∏á BillboardGui (UI ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£)
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "FierceESPTag_" .. targetPlayer.Name -- ‡∏ä‡∏∑‡πà‡∏≠ unique
    billboard.Size = UDim2.new(0, 120, 0, 35) -- ‡∏Ç‡∏ô‡∏≤‡∏î
    billboard.StudsOffset = Vector3.new(0, 2.5, 0) -- ‡∏¢‡∏Å‡∏Ç‡∏∂‡πâ‡∏ô 2.5 studs
    billboard.AlwaysOnTop = true -- ‡πÄ‡∏´‡πá‡∏ô‡πÄ‡∏™‡∏°‡∏≠‡πÅ‡∏°‡πâ‡∏°‡∏µ‡∏™‡∏¥‡πà‡∏á‡∏Å‡∏µ‡∏î‡∏Ç‡∏ß‡∏≤‡∏á
    billboard.MaxDistance = ESPController.Settings.Range -- ‡πÑ‡∏°‡πà‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏Å‡∏¥‡∏ô‡∏£‡∏∞‡∏¢‡∏∞‡∏ô‡∏µ‡πâ
    billboard.Parent = Core.ScreenGui
    
    -- Background ‡∏Ç‡∏≠‡∏á tag
    local bg = Instance.new("Frame")
    bg.Name = "Background"
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.BackgroundColor3 = Color3.fromRGB(0,0,0)
    bg.BackgroundTransparency = 0.6
    bg.BorderSizePixel = 0
    bg.Parent = billboard
    
    -- ‡∏°‡∏∏‡∏°‡πÇ‡∏Ñ‡πâ‡∏á
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 4)
    corner.Parent = bg
    
    -- Name Label
    local nameLabel = Instance.new("TextLabel")
    nameLabel.Name = "NameLabel"
    nameLabel.Size = UDim2.new(1, -10, 0, 12)
    nameLabel.Position = UDim2.new(0, 5, 0, 2)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = targetPlayer.Name
    nameLabel.TextColor3 = Core.Colors.AccentColor -- ‡∏™‡∏µ Accent
    nameLabel.TextSize = ESPController.Settings.TextSize
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.Parent = bg
    
    -- Distance Label
    local distLabel = Instance.new("TextLabel")
    distLabel.Name = "DistanceLabel"
    distLabel.Size = UDim2.new(1, -10, 0, 10)
    distLabel.Position = UDim2.new(0, 5, 0, 14)
    distLabel.BackgroundTransparency = 1
    distLabel.Text = "" -- ‡∏à‡∏∞‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
    distLabel.TextColor3 = Color3.new(0.9,0.9,0.9) -- ‡∏™‡∏µ‡πÄ‡∏ó‡∏≤‡∏≠‡πà‡∏≠‡∏ô
    distLabel.TextSize = ESPController.Settings.TextSize - 1
    distLabel.Font = Enum.Font.Gotham
    distLabel.TextXAlignment = Enum.TextXAlignment.Left
    distLabel.Parent = bg
    
    -- Health Label
    local healthLabel = Instance.new("TextLabel")
    healthLabel.Name = "HealthLabel"
    healthLabel.Size = UDim2.new(1, -10, 0, 10)
    healthLabel.Position = UDim2.new(0, 5, 0, 23)
    healthLabel.BackgroundTransparency = 1
    healthLabel.Text = "" -- ‡∏à‡∏∞‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
    healthLabel.TextColor3 = Color3.new(0,1,0) -- ‡∏™‡∏µ‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß
    healthLabel.TextSize = ESPController.Settings.TextSize - 1
    healthLabel.Font = Enum.Font.Gotham
    healthLabel.TextXAlignment = Enum.TextXAlignment.Left
    healthLabel.Parent = bg
    
    -- ‡πÄ‡∏Å‡πá‡∏ö reference
    ESPController.Objects.NameTags[targetPlayer] = {
        billboard = billboard,
        nameLabel = nameLabel,
        distLabel = distLabel,
        healthLabel = healthLabel
    }
    
    -- Update Loop (‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡πÉ‡∏ô spawn ‡πÅ‡∏¢‡∏Å thread)
    spawn(function()
        local myCharacter, targetCharacter
        local myHumanoidRootPart, targetHumanoidRootPart
        local targetHumanoid
        
        while ESPController.isEnabled.Name and Players:FindFirstChild(targetPlayer.Name) do
            -- pcall ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏ó‡∏∏‡∏Å error ‡∏ó‡∏µ‡πà‡∏≠‡∏≤‡∏à‡πÄ‡∏Å‡∏¥‡∏î
            local success = pcall(function()
                -- ‡∏î‡∏∂‡∏á Character ‡∏Ç‡∏≠‡∏á‡πÄ‡∏£‡∏≤
                myCharacter = Core.GetCharacter()
                targetCharacter = targetPlayer.Character
                
                if myCharacter and targetCharacter then
                    myHumanoidRootPart = myCharacter:FindFirstChild("HumanoidRootPart")
                    targetHumanoidRootPart = targetCharacter:FindFirstChild("HumanoidRootPart")
                    targetHumanoid = targetCharacter:FindFirstChildOfClass("Humanoid")
                    
                    if myHumanoidRootPart and targetHumanoidRootPart then
                        -- ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á
                        local distance = (targetHumanoidRootPart.Position - myHumanoidRootPart.Position).Magnitude
                        
                        if distance <= ESPController.Settings.Range then
                            -- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
                            billboard.Enabled = true
                            billboard.Adornee = targetHumanoidRootPart -- ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á
                            distLabel.Text = string.format("%.0fm", distance) -- ‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏∞‡∏¢‡∏∞
                            
                            if targetHumanoid then
                                healthLabel.Text = string.format("%d/%d", targetHumanoid.Health, targetHumanoid.MaxHealth)
                            end
                        else
                            billboard.Enabled = false -- ‡πÄ‡∏Å‡∏¥‡∏ô‡∏£‡∏∞‡∏¢‡∏∞ ‡∏ã‡πà‡∏≠‡∏ô
                        end
                    else
                        billboard.Enabled = false -- ‡πÑ‡∏°‡πà‡πÄ‡∏à‡∏≠ HumanoidRootPart
                    end
                else
                    billboard.Enabled = false -- ‡πÑ‡∏°‡πà‡πÄ‡∏à‡∏≠ Character
                end
            end)
            
            if not success then
                -- ‡∏ñ‡πâ‡∏≤ error ‡∏£‡∏≠‡πÅ‡∏•‡∏∞‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà
                wait(ESPController.Settings.UpdateRate)
            end
            
            wait(ESPController.Settings.UpdateRate) -- ‡∏£‡∏≠‡∏ï‡∏≤‡∏° update rate
        end
        
        -- Cleanup ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏õ‡∏¥‡∏î ESP ‡∏´‡∏£‡∏∑‡∏≠ player ‡∏≠‡∏≠‡∏Å
        if ESPController.Objects.NameTags[targetPlayer] then
            billboard:Destroy() -- ‡∏•‡∏ö UI
            ESPController.Objects.NameTags[targetPlayer] = nil -- ‡∏•‡∏ö reference
        end
    end)
end

-- ========== Highlight ESP (Highlight ‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£) ==========
local function CreateHighlight(targetPlayer)
    -- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏ã‡πâ‡∏≥
    if ESPController.Objects.Highlights[targetPlayer] then
        return
    end
    
    -- ‡∏™‡∏£‡πâ‡∏≤‡∏á Highlight (Roblox native effect)
    local highlight = Instance.new("Highlight")
    highlight.Name = "FierceESPHighlight_" .. targetPlayer.Name
    highlight.FillColor = Core.Colors.AccentColor
    highlight.OutlineColor = Color3.new(1,1,1) -- ‡∏Ç‡∏≤‡∏ß
    highlight.OutlineTransparency = 0.5
    highlight.FillTransparency = 0.7 -- ‡πÇ‡∏õ‡∏£‡πà‡∏á‡πÉ‡∏™ 70%
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop -- ‡πÄ‡∏´‡πá‡∏ô‡πÄ‡∏™‡∏°‡∏≠
    highlight.Parent = Core.ScreenGui
    
    ESPController.Objects.Highlights[targetPlayer] = highlight
    
    -- Update Loop
    spawn(function()
        local targetCharacter
        
        while ESPController.isEnabled.Highlight and Players:FindFirstChild(targetPlayer.Name) do
            pcall(function()
                targetCharacter = targetPlayer.Character
                
                if targetCharacter then
                    highlight.Adornee = targetCharacter -- ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£
                    highlight.Enabled = true
                else
                    highlight.Enabled = false -- ‡∏ã‡πà‡∏≠‡∏ô‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÑ‡∏°‡πà‡∏°‡∏µ character
                end
            end)
            
            wait(1) -- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏ó‡∏∏‡∏Å 1 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ (Highlight ‡πÑ‡∏°‡πà‡∏à‡∏≥‡πÄ‡∏õ‡πá‡∏ô‡∏ö‡πà‡∏≠‡∏¢)
        end
        
        -- Cleanup
        if ESPController.Objects.Highlights[targetPlayer] then
            highlight:Destroy()
            ESPController.Objects.Highlights[targetPlayer] = nil
        end
    end)
end

-- ========== ESP Control Functions (‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏° On/Off) ==========
-- ‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î Name Tag ESP
function ESPController.ToggleNameESP()
    ESPController.isEnabled.Name = not ESPController.isEnabled.Name -- ‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
    
    if ESPController.isEnabled.Name then
        -- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö players ‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
        for _, plr in ipairs(Players:GetPlayers()) do
            if plr ~= Player then -- ‡πÑ‡∏°‡πà‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÉ‡∏´‡πâ‡∏ï‡∏±‡∏ß‡πÄ‡∏≠‡∏á
                CreateNameTag(plr)
            end
        end
        
        -- ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏° event ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö player ‡πÉ‡∏´‡∏°‡πà
        ESPController.Connections.PlayerAdded = Players.PlayerAdded:Connect(function(newPlayer)
            if ESPController.isEnabled.Name and newPlayer ~= Player then
                wait(1) -- ‡∏£‡∏≠‡πÉ‡∏´‡πâ character ‡πÇ‡∏´‡∏•‡∏î
                CreateNameTag(newPlayer)
            end
        end)
        
        -- ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏° event ‡πÄ‡∏°‡∏∑‡πà‡∏≠ player ‡∏≠‡∏≠‡∏Å (cleanup)
        ESPController.Connections.PlayerRemoving = Players.PlayerRemoving:Connect(function(removingPlayer)
            if ESPController.Objects.NameTags[removingPlayer] then
                ESPController.Objects.NameTags[removingPlayer].billboard:Destroy()
                ESPController.Objects.NameTags[removingPlayer] = nil
            end
        end)
        
        Core.ShowNotification("‚úÖ ESP Name Tags enabled", 2)
    else
        -- Disconnect connections
        if ESPController.Connections.PlayerAdded then
            ESPController.Connections.PlayerAdded:Disconnect()
            ESPController.Connections.PlayerAdded = nil
        end
        
        if ESPController.Connections.PlayerRemoving then
            ESPController.Connections.PlayerRemoving:Disconnect()
            ESPController.Connections.PlayerRemoving = nil
        end
        
        -- Destroy all name tags
        for _, obj in pairs(ESPController.Objects.NameTags) do
            obj.billboard:Destroy()
        end
        ESPController.Objects.NameTags = {}
        
        Core.ShowNotification("‚ùå ESP Name Tags disabled", 2)
    end
end

-- ‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î Highlight ESP
function ESPController.ToggleHighlightESP()
    ESPController.isEnabled.Highlight = not ESPController.isEnabled.Highlight
    
    if ESPController.isEnabled.Highlight then
        -- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö players ‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
        for _, plr in ipairs(Players:GetPlayers()) do
            if plr ~= Player then
                CreateHighlight(plr)
            end
        end
        
        -- ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏° event ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö player ‡πÉ‡∏´‡∏°‡πà
        ESPController.Connections.PlayerAdded = Players.PlayerAdded:Connect(function(newPlayer)
            if ESPController.isEnabled.Highlight and newPlayer ~= Player then
                wait(1)
                CreateHighlight(newPlayer)
            end
        end)
        
        -- ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏° event ‡πÄ‡∏°‡∏∑‡πà‡∏≠ player ‡∏≠‡∏≠‡∏Å
        ESPController.Connections.PlayerRemoving = Players.PlayerRemoving:Connect(function(removingPlayer)
            if ESPController.Objects.Highlights[removingPlayer] then
                ESPController.Objects.Highlights[removingPlayer]:Destroy()
                ESPController.Objects.Highlights[removingPlayer] = nil
            end
        end)
        
        Core.ShowNotification("‚úÖ ESP Highlight enabled", 2)
    else
        -- Disconnect
        if ESPController.Connections.PlayerAdded then
            ESPController.Connections.PlayerAdded:Disconnect()
            ESPController.Connections.PlayerAdded = nil
        end
        
        if ESPController.Connections.PlayerRemoving then
            ESPController.Connections.PlayerRemoving:Disconnect()
            ESPController.Connections.PlayerRemoving = nil
        end
        
        -- Destroy all highlights
        for _, obj in pairs(ESPController.Objects.Highlights) do
            obj:Destroy()
        end
        ESPController.Objects.Highlights = {}
        
        Core.ShowNotification("‚ùå ESP Highlight disabled", 2)
    end
end

-- ========== Export to Part 3 ==========
Core.ESPController = ESPController -- ‡∏™‡πà‡∏á‡∏ï‡πà‡∏≠‡πÑ‡∏õ Part 3

Core.ShowNotification("üîç ESP Engine v1.6 Loaded", 3)

print("Fierce Executor v1.6 - Part 2/3 ESP Engine Loaded Successfully")
print("ESP System Ready: NameTags = " .. tostring(ESPController.isEnabled.Name) .. 
      ", Highlights = " .. tostring(ESPController.isEnabled.Highlight))
