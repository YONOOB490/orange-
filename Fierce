-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏° script
local function CreateScriptButton(data, index)
    local btn = Instance.new("TextButton")
    btn.Name = "ScriptButton_" .. data.name
    btn.Size = UDim2.new(1, -10, 0, 70)
    btn.Position = UDim2.new(0, 5, 0, (index-1)*75) -- ‡∏´‡πà‡∏≤‡∏á‡∏Å‡∏±‡∏ô 75px
    btn.BackgroundColor3 = Core.Colors.DarkBase
    btn.BackgroundTransparency = 0.5
    btn.Text = "" -- ‡∏à‡∏∞‡πÉ‡∏™‡πà text ‡πÉ‡∏ô labels ‡∏¢‡πà‡∏≠‡∏¢
    btn.Parent = HubScroll
    
    -- ‡∏°‡∏∏‡∏°‡πÇ‡∏Ñ‡πâ‡∏á
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = btn
    
    -- Glow
    local stroke = Instance.new("UIStroke")
    stroke.Color = Core.Colors.AccentColor
    stroke.Thickness = 1
    stroke.Transparency = 0.8
    stroke.Parent = btn
    
    -- Title
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, -20, 0.4, 0)
    title.Position = UDim2.new(0, 10, 0, 5)
    title.BackgroundTransparency = 1
    title.Text = data.name
    title.TextColor3 = Color3.new(1,1,1)
    title.TextSize = 18
    title.Font = Enum.Font.GothamBold
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = btn
    
    -- Description
    local desc = Instance.new("TextLabel")
    desc.Size = UDim2.new(1, -20, 0.3, 0)
    desc.Position = UDim2.new(0, 10, 0.4, 0)
    desc.BackgroundTransparency = 1
    desc.Text = data.desc
    desc.TextColor3 = Color3.new(0.8,0.8,0.8)
    desc.TextSize = 12
    desc.Font = Enum.Font.Gotham
    desc.TextXAlignment = Enum.TextXAlignment.Left
    desc.Parent = btn
    
    -- Key Status
    local keyStatus = Instance.new("TextLabel")
    keyStatus.Size = UDim2.new(1, -20, 0.3, 0)
    keyStatus.Position = UDim2.new(0, 10, 0.7, 0)
    keyStatus.BackgroundTransparency = 1
    keyStatus.Text = data.key and "üîë REQUIRES KEY" or "‚úÖ NO KEY"
    keyStatus.TextColor3 = data.key and Color3.fromRGB(255, 100, 100) or Color3.fromRGB(0, 255, 0)
    keyStatus.TextSize = 11
    keyStatus.Font = Enum.Font.GothamBold
    keyStatus.TextXAlignment = Enum.TextXAlignment.Left
    keyStatus.Parent = btn
    
    -- ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤ script ‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡πÄ‡∏Å‡∏°‡∏ô‡∏µ‡πâ‡πÑ‡∏´‡∏°
    local isSupported = false
    for _, id in ipairs(data.games) do
        if id == game.PlaceId then
            isSupported = true
            break
        end
    end
    
    -- ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡πÅ‡∏•‡∏∞‡∏°‡∏µ‡∏£‡∏∞‡∏ö‡∏∏‡πÄ‡∏Å‡∏° -> ‡∏à‡∏≤‡∏á‡∏•‡∏á
    if not isSupported and #data.games > 0 then
        TweenService:Create(btn, Core.TweenInfo.Smooth, {BackgroundTransparency = 0.7}):Play()
        title.TextColor3 = Color3.new(0.6,0.6,0.6)
        desc.TextColor3 = Color3.new(0.4,0.4,0.4)
        keyStatus.TextColor3 = Color3.new(0.4,0.4,0.4)
    end
    
    -- Hover Effects
    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, Core.TweenInfo.Smooth, {BackgroundTransparency = 0.3}):Play()
        TweenService:Create(stroke, Core.TweenInfo.Smooth, {Transparency = 0.5}):Play()
    end)
    
    btn.MouseLeave:Connect(function()
        local target = (isSupported or #data.games == 0) and 0.5 or 0.7
        TweenService:Create(btn, Core.TweenInfo.Smooth, {BackgroundTransparency = target}):Play()
        TweenService:Create(stroke, Core.TweenInfo.Smooth, {Transparency = 0.8}):Play()
    end)
    
    -- Click Handler
    btn.MouseButton1Click:Connect(function()
        -- ‡πÄ‡∏ä‡πá‡∏Ñ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏Ç‡πâ‡∏≤‡∏Å‡∏±‡∏ô‡πÑ‡∏î‡πâ
        if not isSupported and #data.games > 0 then
            Core.ShowNotification("‚ö†Ô∏è Not optimized for this game", 3)
            return
        end
        
        -- ‡∏ñ‡πâ‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£ key ‡πÉ‡∏´‡πâ copy URL
        if data.key then
            Core.ShowNotification("üîë Opening key link...", 2)
            if syn and syn.write_clipboard then -- ‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö Synapse
                syn.write_clipboard(data.keyurl)
                Core.ShowNotification("üìã Key URL copied!", 3)
            end
        end
        
        Core.ShowNotification("üìú Executing " .. data.name .. "...", 2)
        
        -- Execute ‡πÉ‡∏ô spawn ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÑ‡∏°‡πà block UI
        spawn(function()
            pcall(function()
                loadstring(data.script)() -- ‡πÇ‡∏´‡∏•‡∏î script
            end)
        end)
    end)
    
    Core.AddHoverEffect(btn)
    return btn
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
for i, scriptData in ipairs(ScriptHub) do
    CreateScriptButton(scriptData, i)
end

