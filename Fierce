FOVToggle.TextColor3 = Color3.new(1,1,1)
FOVToggle.TextSize = 14
FOVToggle.Font = Enum.Font.GothamBold
FOVToggle.Parent = Tab3

local FOVCorner = Instance.new("UICorner")
FOVCorner.CornerRadius = UDim.new(0, 6)
FOVCorner.Parent = FOVToggle

local FOVStroke = Instance.new("UIStroke")
FOVStroke.Color = Core.Colors.AccentColor
FOVStroke.Thickness = 1
FOVStroke.Transparency = 0.7
FOVStroke.Parent = FOVToggle

FOVToggle.MouseButton1Click:Connect(function()
    -- ‡∏™‡∏•‡∏±‡∏ö‡∏Ñ‡πà‡∏≤ FOV: 70 -> 80 -> 90 -> ... -> 120 -> 70
    FOVValue = FOVValue >= 120 and 70 or FOVValue + 10
    workspace.CurrentCamera.FieldOfView = FOVValue -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô FOV ‡∏Ç‡∏≠‡∏á‡∏Å‡∏•‡πâ‡∏≠‡∏á
    FOVToggle.Text = "FOV: " .. FOVValue
    
    -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏™‡∏µ‡∏õ‡∏∏‡πà‡∏°‡∏ï‡∏≤‡∏°‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
    TweenService:Create(FOVToggle, Core.TweenInfo.Smooth, {
        BackgroundTransparency = FOVValue ~= 70 and 0.3 or 0.6
    }):Play()
    
    Core.Config.Visuals.FOV = FOVValue
    Core.ShowNotification("‚úÖ FOV set to " .. FOVValue, 2)
end)
Core.AddHoverEffect(FOVToggle)

