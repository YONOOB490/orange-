local Core = _G.FierceCore
if not Core then
    error("FierceExecutor Error: Part 1 must be loaded before Part 3!")
    return
end

local ESPController = Core.ESPController
if not ESPController then
    error("FierceExecutor Error: Part 2 must be loaded before Part 3!")
    return
end

-- ‡πÄ‡∏û‡∏¥‡πà‡∏° Tab Icons ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏° (Part 1 ‡∏°‡∏µ‡πÅ‡∏Ñ‡πà 2, ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö 4)
Core.TabIcons = {"üó°Ô∏è", "üî•", "üëÅÔ∏è", "‚ÑπÔ∏è"}

-- ========== TAB 1: PLAYER CONTROLS (‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£) ==========
